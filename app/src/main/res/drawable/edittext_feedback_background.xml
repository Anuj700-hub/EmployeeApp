<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!-- Draw a 2dp width border around shape -->
            <stroke
                android:color="@color/text_medium"
                android:width="1dp"
                />
            <corners android:radius="@dimen/dimen_8"/>
        </shape>
    </item>
    <!-- Overlap the left, top and right border using background color  -->
    <item android:gravity="bottom"
        android:right="1dp" android:left="1dp" android:bottom="1dp" android:height="@dimen/dimen_30"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_alpha"/>
            <corners android:bottomRightRadius="@dimen/dimen_8"
                android:bottomLeftRadius="@dimen/dimen_8"/>
        </shape>
    </item>


</layer-list>