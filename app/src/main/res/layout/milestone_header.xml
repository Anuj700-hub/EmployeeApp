<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide0"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders"
        style="@style/MediumTextViewDark"
        android:layout_margin="@dimen/dimen_8"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guide0"
        app:layout_constraintRight_toLeftOf="@+id/guide1"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_milestones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milestones"
        style="@style/MediumTextViewDark"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guide1"
        app:layout_constraintRight_toLeftOf="@+id/guide2"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        style="@style/MediumTextViewDark"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guide2"
        app:layout_constraintRight_toLeftOf="@+id/guide3"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTextViewDark"
        android:text="Rewards"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guide"
        app:layout_constraintLeft_toRightOf="@+id/guide3"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>