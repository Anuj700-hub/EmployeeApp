<androidx.cardview.widget.CardView android:id="@+id/cv_order_option"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    style="@style/GreyCardView"
    android:layout_margin="@dimen/dimen_10"
    card_view:cardCornerRadius="@dimen/dimen_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_vendor_image"
            android:maxWidth="120dp"
            android:maxHeight="120dp"
            android:adjustViewBounds="true"
            />

        <com.hungerbox.customer.util.view.HBTextViewBold
            android:id="@+id/order_option_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:textSize="@dimen/dimen_12"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/NormalTextViewDark" />
        <com.hungerbox.customer.util.view.HBTextViewBold
            android:id="@+id/order_option_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:textSize="@dimen/dimen_12"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/NormalTextViewDark" />
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/order_option_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:textSize="@dimen/dimen_12"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/NormalTextViewDark" />
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/order_option_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:textSize="@dimen/dimen_12"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/NormalTextViewDark" />

        <com.hungerbox.customer.util.view.HBTextViewBold
            android:id="@+id/order_option_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/NormalTextViewDark"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:padding="@dimen/dimen_4"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>