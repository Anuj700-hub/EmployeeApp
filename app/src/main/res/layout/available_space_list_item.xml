<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16"
    app:cardCornerRadius="@dimen/dimen_8"
    app:cardElevation="@dimen/dimen_24">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_drawable"
        android:padding="@dimen/dimen_8">

        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_cafe_name"
            style="@style/MediumTextViewBoldNoPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Namma cafe" />

        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_cafe_address"
            style="@style/NormalTextViewGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cafe_name"
            tools:text="HSR Layout, Bangalore" />

        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_capacity"
            style="@style/NormalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cafe_name"
            tools:text="52 slots left" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>