<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="@dimen/dimen_10">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_error_message"
            style="@style/MediumTextViewDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="4"
            android:maxLines="10"
            android:text="You cannot order more free products. To view status of order of free products click on view order." />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_error_message"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@id/divider"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/bt_cart_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="VIEW ORDERS"
                android:textColor="@color/colorAccent"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_cart_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorAccent"
                android:text="GO TO HOME"
                android:textColor="@color/white" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
