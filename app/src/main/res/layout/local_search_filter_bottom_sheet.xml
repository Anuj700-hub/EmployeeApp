<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_filter_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_curved_border_top_white"
    android:padding="@dimen/dimen_24"
    android:elevation="@dimen/dimen_10">

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_filter"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text"
        android:textColor="@color/colorAccent"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:text="Filter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_filter_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_rewards_red_cross"
        app:layout_constraintTop_toTopOf="@+id/tv_filter"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/colorAccent"
        android:text="Meal"
        style="@style/MediumTextView"
        android:layout_marginLeft="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_24"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/cb_veg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/radio_selector"
        android:padding="@dimen/dimen_4"
        android:text="Veg"
        android:fontFamily="@font/grotesksemibold"
        android:textSize="@dimen/medium_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_meal"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <CheckBox
        android:id="@+id/cb_nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/radio_selector"
        android:padding="@dimen/dimen_4"
        android:text="Non-Veg"
        android:fontFamily="@font/grotesksemibold"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="@dimen/dimen_30"
        app:layout_constraintTop_toBottomOf="@+id/tv_meal"
        app:layout_constraintLeft_toRightOf="@+id/cb_veg"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:visibility="gone"
        android:id="@+id/tv_mrp_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/colorAccent"
        android:text="Is Mrp Item"
        style="@style/MediumTextView"
        android:layout_marginLeft="@dimen/dimen_4"
        app:layout_constraintTop_toBottomOf="@+id/cb_veg"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <RadioGroup
        android:visibility="gone"
        android:id="@+id/rg_mrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_mrp_item"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_selector"
            android:text="Yes"
            android:fontFamily="@font/grotesksemibold"
            android:textSize="@dimen/medium_text"
            android:padding="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_30"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_selector"
            android:padding="@dimen/dimen_4"
            android:textSize="@dimen/medium_text"
            android:fontFamily="@font/grotesksemibold"
            android:text="No"/>
    </RadioGroup>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/colorAccent"
        android:text="Category"
        style="@style/MediumTextView"
        android:layout_marginLeft="@dimen/dimen_4"
        app:layout_constraintTop_toBottomOf="@+id/rg_mrp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <HorizontalScrollView
        android:id="@+id/sv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_category">
        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/colorAccent"
        android:text="Price"
        style="@style/MediumTextView"
        android:layout_marginLeft="@dimen/dimen_4"
        app:layout_constraintTop_toBottomOf="@+id/sv_category"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <SeekBar
        android:id="@+id/sb_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_value"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_price_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintBottom_toTopOf="@+id/sb_price"
        app:layout_constraintLeft_toLeftOf="@+id/sb_price"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_price_lower_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹ 0"
        app:layout_constraintTop_toBottomOf="@+id/sb_price"
        app:layout_constraintBottom_toTopOf="@+id/tv_calorie"
        app:layout_constraintLeft_toLeftOf="@+id/sb_price"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_price_upper_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹ 100"
        app:layout_constraintTop_toBottomOf="@+id/sb_price"
        app:layout_constraintBottom_toTopOf="@+id/tv_calorie"
        app:layout_constraintRight_toRightOf="@+id/sb_price"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/colorAccent"
        android:text="Calorie"
        style="@style/MediumTextView"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_lower_value"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <SeekBar
        android:id="@+id/sb_calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_calorie_value"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_calorie_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/tv_calorie"
        app:layout_constraintBottom_toTopOf="@+id/sb_calorie"
        app:layout_constraintLeft_toLeftOf="@+id/sb_calorie"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_calorie_lower_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Cal"
        app:layout_constraintTop_toBottomOf="@+id/sb_calorie"
        app:layout_constraintBottom_toTopOf="@+id/bt_filter_ok"
        app:layout_constraintLeft_toLeftOf="@+id/sb_calorie"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_calorie_upper_value"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 Cal"
        app:layout_constraintTop_toBottomOf="@+id/sb_calorie"
        app:layout_constraintBottom_toTopOf="@+id/bt_filter_ok"
        app:layout_constraintRight_toRightOf="@+id/sb_calorie"/>
    <Button
        android:id="@+id/bt_filter_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_margin="@dimen/dimen_10"
        style="@style/GlobalSearchButton"
        app:layout_constraintTop_toBottomOf="@+id/tv_calorie_lower_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_filter_clear"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:layout_margin="@dimen/dimen_10"
        style="@style/GlobalSearchButton"
        app:layout_constraintTop_toBottomOf="@+id/tv_calorie_lower_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>