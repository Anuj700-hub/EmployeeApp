<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface">

<LinearLayout
    android:elevation="0dp"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hungerbox.customer.navmenu.activity.SuccesFailActivity">


    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="The recharge is successful"
        android:textColor="?attr/textColorDark"
        style="@style/LargeTextView" />

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/iv_status1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_fileName="success.json"
        app:lottie_loop="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/iv_status2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_fileName="failed.json"
        app:lottie_loop="true"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:layout_marginTop="@dimen/dimen_12"
        android:id="@+id/tv_payment_response_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        style="@style/NormalTextView"
        android:textColor="?attr/textColorDark"
        android:text="done" />

    <Button
        android:id="@+id/bt_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:text="continue"
        style="@style/NormalButton"/>


</LinearLayout>
</RelativeLayout>