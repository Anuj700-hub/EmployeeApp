<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_10"
    app:cardCornerRadius="@dimen/dimen_10"
    android:background="@color/transparent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp">

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_24"
        android:paddingRight="@dimen/dimen_24"
        android:text="Add the Affiliation of Guests You are ordering for."
        style="@style/LargeTextViewDark"/>

    <ScrollView
        android:id="@+id/sv_guest_names"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_below="@+id/tv_title">

        <LinearLayout
            android:id="@+id/ll_guest_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5"></LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/tv_ok_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sv_guest_names"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:text="Submit"
        style="@style/NormalButton"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>

