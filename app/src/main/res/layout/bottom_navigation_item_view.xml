<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        tools:src="@drawable/hb_logo_new"
        android:paddingLeft="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_new_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_new_icon"
        android:visibility="invisible"
        android:layout_alignRight="@+id/iv_logo"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_badge"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:background="@drawable/circular_badge_background"
        android:layout_marginRight="@dimen/dimen_2"
        android:layout_marginTop="@dimen/dimen_2"
        android:layout_alignRight="@+id/iv_logo"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextViewDark"
        android:gravity="center_horizontal"
        android:layout_below="@+id/iv_logo"
        android:layout_centerInParent="true"/>

</RelativeLayout>