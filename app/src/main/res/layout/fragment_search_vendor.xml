<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_count"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="left"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/xsmall_text"
        android:text="50 vendors found"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vendors"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_color"
        tools:listitem="@layout/search_vendor_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_count"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_empty"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_empty_search"
        android:layout_margin="@dimen/dimen_10"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_empty"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_empty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTextView"
        android:gravity="center_horizontal"
        android:textSize="@dimen/large_text"
        android:textColor="@color/black_60"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:text="No search result"
        app:layout_constraintTop_toBottomOf="@+id/iv_empty"
        app:layout_constraintBottom_toTopOf="@+id/tv_empty_sub"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/tv_empty_sub"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NormalTextViewGrey"
        android:textSize="@dimen/medium_large_text"
        android:textColor="@color/black_60"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="3sp"
        android:text="Try searching for something else"
        app:layout_constraintTop_toBottomOf="@+id/tv_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <com.facebook.shimmer.ShimmerFrameLayout
        android:visibility="gone"
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorGrey_Dot"
                android:layout_marginBottom="@dimen/dimen_20"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>