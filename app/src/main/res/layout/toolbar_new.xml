<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_prelogin_backdrop"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:padding="@dimen/dimen_4"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        app:srcCompat="@drawable/ic_white_back_arrow" />

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tb_title"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_60"
        android:textSize="@dimen/larger_text"
        android:padding="@dimen/divider_height_normal"
        />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24"
        app:srcCompat="@drawable/ic_logo_on_backdrop"
        android:visibility="gone"
        android:padding="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_16"/>

    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tb_header"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24"
        android:textSize="@dimen/medium_xlarge_text"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/dimen_16"
        android:padding="@dimen/divider_height_normal"
        />


</LinearLayout>
