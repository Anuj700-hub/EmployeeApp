<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_parent"
    app:cardCornerRadius="@dimen/dimen_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guide_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guide_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guide_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guide_middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guide_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reward_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_rewards_trophy"
            app:layout_constraintTop_toTopOf="@+id/horizontal_guide_top"
            app:layout_constraintBottom_toBottomOf="@+id/horizontal_guide_middle"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
            app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"/>
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_reward_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/NormalTextViewGrey"
            android:layout_marginTop="@dimen/dimen_16"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_guide_middle"
            app:layout_constraintBottom_toTopOf="@+id/tv_reward"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
            app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"
            android:text="You won "/>
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_reward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/MediumTextViewBold"
            android:textSize="@dimen/medium_extra_large_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_reward_label"
            app:layout_constraintBottom_toTopOf="@+id/tv_voucher"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
            app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"
            android:text="Rs 50"/>
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/NormalTextViewGrey"
            android:textSize="@dimen/medium_large_text"
            android:textColor="@color/colorAccent"
            android:layerType="software"
            android:background="@drawable/dashed_rounded_background"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:enabled="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/tv_reward"
            app:layout_constraintBottom_toTopOf="@+id/tv_date"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
            app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"
            android:text=" AJDHYC-4563 "/>
        <com.hungerbox.customer.util.view.HbTextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/NormalTextViewGrey"
            app:layout_constraintTop_toBottomOf="@+id/tv_voucher"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_bottom"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
            app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"
            tools:text="1 March 2020"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>