                                android:text=""
                                android:textColor="@color/colorAccent" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <com.hungerbox.customer.util.view.HbTextView
                        android:id="@+id/tv_payment_list_header"
                        style="@style/MediumTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_36"
                        android:background="@color/colorOccasionBar"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingLeft="@dimen/dimen_12"
                        android:paddingTop="?attr/paddingSmall"
                        android:paddingRight="@dimen/dimen_12"
                        android:paddingBottom="?attr/paddingSmall"
                        android:text="Payment"
                        android:textColor="@color/colorAccent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_order_wallet_lists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="?attr/paddingSmall"
                        android:paddingBottom="@dimen/dimen_10" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_order_detail"
                android:background="@color/colorSurface"
                app:srcCompat="@drawable/ic_triangle"
                android:rotation="180"
                android:id="@+id/iv_bottom_triangle"
                android:layout_marginTop="-1dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_32"
                android:background="@color/colorSurface"
                android:layout_below="@+id/iv_bottom_triangle"

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>