<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_space_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_stroke_grey_rounded"
    android:layout_marginTop="@dimen/dimen_6"
    android:padding="@dimen/dimen_12">
    <com.hungerbox.customer.util.view.HbTextView
        style="@style/MediumTextViewBold"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Namma Cafe" />
    <com.hungerbox.customer.util.view.HbTextView
        style="@style/NormalTextViewGrey"
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="HSR Layout, Bangalore" />
    <com.hungerbox.customer.util.view.HbTextView
        style="@style/NormalTextViewGrey"
        android:id="@+id/tv_density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="52 slots left" />

</androidx.constraintlayout.widget.ConstraintLayout>