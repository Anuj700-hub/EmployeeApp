<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="com.hungerbox.customer.contest.activity.RewardViewActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.14"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_rewards_red_cross"
        android:layout_margin="@dimen/dimen_10"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide"
        app:layout_constraintLeft_toRightOf="@+id/vertical_guide_right"
        android:visibility="visible"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_scratch_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:clipChildren="true"
        android:gravity="center"
        app:cardCornerRadius="@dimen/dimen_20"
        app:cardElevation="@dimen/dimen_16"
        tools:context=".RelativeLayoutScratchActivity"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_guide"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
        app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"
        app:layout_constraintDimensionRatio="H,1:1">

        <com.hungerbox.customer.util.view.ScratchRelativeLayoutView
            android:id="@+id/scratch_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/white">

            <include layout="@layout/reward_layout_hidden" />

        </com.hungerbox.customer.util.view.ScratchRelativeLayoutView>
    </androidx.cardview.widget.CardView>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/MediumTextViewBold"
        android:textSize="@dimen/medium_extra_large_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/cv_scratch_card"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
        app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"/>
    <com.hungerbox.customer.util.view.HbTextView
        android:id="@+id/tv_reference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/MediumTextView"
        android:textSize="@dimen/medium_extra_large_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guide_left"
        app:layout_constraintRight_toRightOf="@+id/vertical_guide_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>
